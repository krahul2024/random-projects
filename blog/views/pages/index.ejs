<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Blog</title>
	<!-- this is for bootstrap and styling -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<!-- body begins -->
<body>

<div class="container"> 
	<h1 class="mb-4">Blog articles</h1>
	<a href="/articles/new" class="btn btn-success">New Article</a>
	<% articles.forEach(article=>{%>
	<div class="card mt-4">
		<div class="card-body">
			<h3 class="card-title"><%= article.title%></h3>
			<div class="card-subtitle text-muted mb-2"> <%=article.creationTime%></div>
			<div class="card-text mb-2"><%=article.description%></div>
		<!-- from here the buttons read_more, edit and others are shown -->
		<div>
		<!-- this is for read more for the article -->
		<a href="./articles/<%=article._id%>"><button class="btn btn-secondary btn-info"> Read more..</button></a>
			<!-- this is for editing the article -->
		<a href="./articles/edit/<%=article._id%>"><button class="btn btn-secondary btn-primary">Edit</button></a>
		 <!-- this is for i don't know what purpose -->
		 <form action="./articles/<%=article._id%>?_method=DELETE" method="POST" class="d-inline">
		 	<button type="submit" class="btn btn-secondary btn-danger" >Delete</button>
		 </form>

		</div>
		</div>
	</div>
	<%})%>

</div>



<!-- this is for the bootstrap and styling -->

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>