	<!-- navigation bar code from here bro -->

	<!-- display of the concerned article from here -->
	<div class="container">
		<a href="/articles"><button class="btn btn-secondary">All Articles</button></a>
		<a href="./edit/<%=article._id%>"><button class="btn btn-secondary btn-success" >Edit this article</button></a>
